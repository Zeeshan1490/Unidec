              </li>
            ))}
          </ul>
        </main>
      );
    }

    // Contact page component
    function Contact() {
      // Placeholder submit handler
      const handleSubmit = () => {
        alert('Thank you for your message! (This is a placeholder action.)');
      };

      return (
        <main
          className="min-h-screen max-w-md mx-auto px-6 py-16"
